<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unvired.Kernel.UI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <Style TargetType="local:SettingsCustomControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="local:SettingsCustomControl">
                            <Grid>
                                <!--  Settings List Popup  -->
                                <Popup
                                    x:Name="FlyoutPopup"
                                    FlowDirection="RightToLeft"
                                    IsLightDismissEnabled="True">
                                    <SettingsFlyout
                                        x:Name="Charmflyout"
                                        x:Uid="SettingsTitle"
                                        Title=""
                                        Width="346"
                                        Padding="0,20,0,0"
                                        FlowDirection="LeftToRight"
                                        HeaderBackground="#14345F"
                                        Visibility="Visible">
                                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid x:Name="SettingsItemGrid" VerticalAlignment="Top">
                                                <ListBox
                                                    x:Name="SettingsList"
                                                    Margin="0,10,0,20"
                                                    BorderBrush="Transparent"
                                                    Loaded="OnSettingsListLoaded"
                                                    Tapped="SettingsList_Tapped">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="20,0,0,0" Orientation="Vertical">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image
                                                                        x:Name="Icon"
                                                                        Width="20"
                                                                        Height="20"
                                                                        Margin="0,0,10,0"
                                                                        HorizontalAlignment="Left" />
                                                                    <TextBlock Width="230" Text="{Binding Name}" />
                                                                    <TextBlock Foreground="Red" Text="{Binding Count}" />
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Grid>

                                            <Button
                                                x:Name="Download_Data"
                                                x:Uid="Download_Data"
                                                HorizontalAlignment="Center"
                                                Click="DownloadMsgBtn_Click"
                                                Content=""
                                                Style="{StaticResource LoginButtonStyle}" />
                                            <StackPanel HorizontalAlignment="Center">
                                                <ProgressBar x:Name="download_progressbar" Background="Transparent" />
                                                <TextBlock
                                                    x:Name="downloadMsg_text"
                                                    Foreground="Navy"
                                                    Text="" />
                                            </StackPanel>

                                            <Button
                                                x:Name="InitialDataDownload"
                                                x:Uid="InitialDataDownload"
                                                HorizontalAlignment="Center"
                                                Click="RequestDataBtn_Click"
                                                Content=""
                                                Style="{StaticResource LoginButtonStyle}" />
                                            <StackPanel HorizontalAlignment="Center">
                                                <ProgressBar x:Name="request_progressbar" Background="Transparent" />
                                                <TextBlock
                                                    x:Name="RequestData_indicator"
                                                    Foreground="Navy"
                                                    Text="" />
                                            </StackPanel>
                                        </StackPanel>
                                    </SettingsFlyout>
                                </Popup>

                                <!--  Status Popup  -->
                                <Popup
                                    x:Name="StatusSubFlyoutPopup"
                                    FlowDirection="RightToLeft"
                                    IsLightDismissEnabled="True">
                                    <SettingsFlyout
                                        x:Name="StatusSubFlyout"
                                        x:Uid="StatusHeading"
                                        Title=""
                                        Width="646"
                                        FlowDirection="LeftToRight"
                                        HeaderBackground="#14345F">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Height="240" Orientation="Horizontal">
                                                <StackPanel Width="300" Orientation="Vertical">
                                                    <TextBlock
                                                        x:Uid="StatusTitle"
                                                        Style="{StaticResource StatusHeaderStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Status"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="Status_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="SettingsUser"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="UserId_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="SettingsUrl"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="ServerUrl_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <Button
                                                        x:Name="TestConnectionButton"
                                                        Width="150"
                                                        Click="TestConnection_Clicked"
                                                        Content="Test Connection"
                                                        Style="{StaticResource LoginButtonStyle}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        x:Uid="SettingsThreads"
                                                        Style="{StaticResource StatusHeaderStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="DataSender"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="DataSender_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Foreground="Red"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="IncomingDataHandler"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="InboxDataHandler_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Foreground="Red"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="DataReceiver"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="DataReceiver_text"
                                                        Height="30"
                                                        FontSize="16"
                                                        Foreground="Red"
                                                        Text="" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Width="250" Orientation="Vertical">
                                                    <TextBlock
                                                        x:Uid="Properties"
                                                        Style="{StaticResource StatusHeaderStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Server_Id"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="ServerId"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Login_Type"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="LoginTypetext"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="ACT_Id"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="ActId"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Device_Name"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="DeviceName"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Device_Identifier"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="DeviceId"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock Style="{StaticResource StatusDetailStyle}" Text="Device Identifier" />
                                                    <TextBlock
                                                        x:Name="DeviceIdentifier"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Sec_Level"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="SecLevel"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Company_Alias"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Name="CompanyAlias"
                                                        Height="30"
                                                        FontSize="16"
                                                        Text="" />
                                                    <TextBlock
                                                        x:Uid="Log_Level"
                                                        Style="{StaticResource StatusDetailStyle}"
                                                        Text="" />
                                                    <ComboBox
                                                        x:Name="LogLevel_ComboBox"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Bottom"
                                                        BorderBrush="Gray"
                                                        FontSize="16"
                                                        SelectedIndex="0"
                                                        SelectionChanged="SelectedLogger">
                                                        <ComboBoxItem x:Uid="Debug" Content="" />
                                                        <ComboBoxItem x:Uid="Error" Content="" />
                                                        <ComboBoxItem x:Uid="Important" Content="" />
                                                    </ComboBox>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </SettingsFlyout>
                                </Popup>

                                <!--  Info Message Popup  -->

                                <Popup
                                    x:Name="InfoMessagePopup"
                                    Width="646"
                                    HorizontalAlignment="Right"
                                    IsLightDismissEnabled="True">

                                    <Border
                                        x:Name="InfoMsgFlyoutBorder"
                                        Width="646"
                                        Style="{StaticResource SettingsFlyoutBorderStyle}">
                                        <Grid VerticalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="80" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" Style="{StaticResource SettingsFlyoutHeaderStyle}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel
                                                    Grid.Column="0"
                                                    Margin="40,32,17,13"
                                                    Orientation="Horizontal">
                                                    <StackPanel.Transitions>
                                                        <TransitionCollection>
                                                            <EntranceThemeTransition />
                                                        </TransitionCollection>
                                                    </StackPanel.Transitions>

                                                    <Button
                                                        x:Name="BackButton"
                                                        Margin="0,3,0,0"
                                                        Click="InfoMsgBackButton"
                                                        Content="&#xE2A6;"
                                                        Style="{StaticResource MainPageActionButtonStyle}" />
                                                    <TextBlock
                                                        x:Uid="InfoMessageHeading"
                                                        Margin="10,0,0,0"
                                                        FontFamily="Segoe UI"
                                                        FontSize="24.6667"
                                                        FontWeight="SemiLight"
                                                        Foreground="White"
                                                        Text="" />
                                                    <Button
                                                        x:Name="InfoMsgDeleteBtn"
                                                        Width="30"
                                                        Height="30"
                                                        Margin="350,0,6,0"
                                                        Click="InfoMsgDeleteBtnClick"
                                                        Foreground="White"
                                                        Style="{StaticResource DeleteButtonStyle}" />
                                                </StackPanel>
                                            </Grid>

                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled">
                                                <Grid
                                                    Grid.RowSpan="3"
                                                    Margin="10,10,10,10"
                                                    VerticalAlignment="Top">
                                                    <Grid x:Name="InfoMsgGrid">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <Grid
                                                            Grid.Row="0"
                                                            Margin="0,0,0,80"
                                                            VerticalAlignment="Top">
                                                            <ScrollViewer>
                                                                <ListBox
                                                                    x:Name="InfoMessageList"
                                                                    BorderBrush="Transparent"
                                                                    ItemsSource="{Binding}"
                                                                    Tapped="InfoMessageTapped">
                                                                    <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Vertical">
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Style="{StaticResource LisItemKeyText}" Text="BE Name" />
                                                                                    <TextBlock Text="{Binding BEName}" />
                                                                                </StackPanel>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Style="{StaticResource LisItemKeyText}" Text="Message Type" />
                                                                                    <TextBlock Text="{Binding MessageType}" />
                                                                                    <TextBlock Margin="5,0,0,0" Text="{Binding MessageTypeText}" />
                                                                                </StackPanel>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Style="{StaticResource LisItemKeyText}" Text="Message SubType" />
                                                                                    <TextBlock Text="{Binding MessageSubType}" />
                                                                                    <TextBlock Margin="5,0,0,0" Text="{Binding MessageSubTypeText}" />
                                                                                </StackPanel>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Style="{StaticResource LisItemKeyText}" Text="Date/Time" />
                                                                                    <TextBlock Text="{Binding TimeStamp}" />
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ListBox.ItemTemplate>
                                                                </ListBox>
                                                            </ScrollViewer>
                                                        </Grid>
                                                        <Grid
                                                            x:Name="InfoMessage_details"
                                                            Grid.Row="1"
                                                            Margin="0,-30,0,10"
                                                            VerticalAlignment="Top"
                                                            Visibility="Collapsed">
                                                            <Border
                                                                x:Name="InfoMsgBorder"
                                                                Width="620"
                                                                Margin="0,20,0,0"
                                                                BorderBrush="#14345F"
                                                                BorderThickness="4"
                                                                Visibility="Collapsed">
                                                                <StackPanel Margin="20,20,20,10" Orientation="Vertical">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_BEName"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_beName"
                                                                            Grid.Column="1"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding BeName}" />
                                                                    </Grid>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_BELid"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_BeLid"
                                                                            Grid.Column="1"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding BeLid}" />
                                                                    </Grid>

                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_MessageType"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_msgType"
                                                                            Grid.Column="1"
                                                                            Margin="0,0,10,0"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding MessageType}" />
                                                                        <TextBlock
                                                                            x:Name="info_msgTypeText"
                                                                            Grid.Column="2"
                                                                            Margin="10,0,0,0"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding MessageTypeText}" />
                                                                    </Grid>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_MessageSubType"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_msgSubType"
                                                                            Grid.Column="1"
                                                                            Margin="0,0,10,0"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding MessageSubType}" />
                                                                        <TextBlock
                                                                            x:Name="info_msgsubTypeText"
                                                                            Grid.Column="2"
                                                                            Margin="10,0,0,0"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding MessageSubTypeText}" />
                                                                    </Grid>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_Catagory"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_catagory"
                                                                            Grid.Column="1"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding Category}" />
                                                                    </Grid>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_Message"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_msg"
                                                                            Grid.Column="1"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding Message}" />
                                                                    </Grid>

                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="200" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            x:Uid="InfoMsg_Date/Time"
                                                                            Grid.Column="0"
                                                                            Style="{StaticResource DetailKeyText}" />
                                                                        <TextBlock
                                                                            x:Name="info_timestamp"
                                                                            Grid.Column="1"
                                                                            Style="{StaticResource DetailValText}"
                                                                            Text="{Binding TimeStamp}" />
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Border>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Popup>

                                <!--  Logs popup  -->

                                <Popup
                                    x:Name="LogViewPopup"
                                    Width="646"
                                    HorizontalAlignment="Right"
                                    IsLightDismissEnabled="True">
                                    <Border
                                        x:Name="LoginViewFlyoutBorder"
                                        Width="646"
                                        Style="{StaticResource SettingsFlyoutBorderStyle}">
                                        <Grid VerticalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="80" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" Style="{StaticResource SettingsFlyoutHeaderStyle}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel
                                                    Grid.Column="0"
                                                    Margin="40,32,17,13"
                                                    Orientation="Horizontal">
                                                    <StackPanel.Transitions>
                                                        <TransitionCollection>
                                                            <EntranceThemeTransition />
                                                        </TransitionCollection>
                                                    </StackPanel.Transitions>

                                                    <Button
                                                        x:Name="LogsBackButton"
                                                        Margin="0,3,0,0"
                                                        Content="&#xE2A6;"
                                                        Style="{StaticResource MainPageActionButtonStyle}" />
                                                    <TextBlock
                                                        x:Uid="LogsHeading"
                                                        Margin="10,0,0,0"
                                                        FontFamily="Segoe UI"
                                                        FontSize="24.6667"
                                                        FontWeight="SemiLight"
                                                        Foreground="White"
                                                        Text="" />
                                                </StackPanel>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="0,20,0,0"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <StackPanel.Transitions>
                                                        <TransitionCollection>
                                                            <EntranceThemeTransition />
                                                        </TransitionCollection>
                                                    </StackPanel.Transitions>

                                                    <StackPanel
                                                        x:Name="LogOptionsPanel"
                                                        Background="#14345F"
                                                        Orientation="Horizontal">
                                                        <Button Foreground="White" Style="{StaticResource DeleteButtonStyle}">
                                                            <Button.Flyout>
                                                                <Flyout>
                                                                    <StackPanel>
                                                                        <TextBlock
                                                                            HorizontalAlignment="Center"
                                                                            FontFamily="Segoe UI"
                                                                            FontSize="16"
                                                                            Foreground="#14345F"
                                                                            Text="Logs will be deleted and cannot be recovered back."
                                                                            TextAlignment="Justify" />
                                                                        <Button
                                                                            x:Name="LogsDeleteBtn"
                                                                            Width="Auto"
                                                                            HorizontalAlignment="Center"
                                                                            Click="LogsDeleteBtn_Click"
                                                                            Content="Delete"
                                                                            Style="{StaticResource LoginButtonStyle}" />
                                                                    </StackPanel>
                                                                </Flyout>
                                                            </Button.Flyout>
                                                        </Button>
                                                        <Button
                                                            Name="EmailButton"
                                                            Click="LogsEmailBtn_Click"
                                                            Foreground="White"
                                                            Style="{StaticResource EmailButtonStyle}">
                                                            <Button.Flyout>
                                                                <MenuFlyout>
                                                                    <MenuFlyoutItem
                                                                        x:Name="Log_ViaEmail"
                                                                        Foreground="#14345F"
                                                                        Tapped="ToReceipientTapped"
                                                                        Text="Via Email" />
                                                                    <MenuFlyoutItem
                                                                        x:Name="Log_ToServer"
                                                                        Foreground="#14345F"
                                                                        Tapped="ToUnviredTapped"
                                                                        Text="To Server" />
                                                                </MenuFlyout>
                                                            </Button.Flyout>
                                                        </Button>

                                                        <Button
                                                            x:Name="LogsTopBtn"
                                                            Click="LogsTopBtn_Click"
                                                            Foreground="White"
                                                            Style="{StaticResource TopButtonStyle}" />
                                                        <Button
                                                            x:Name="LogsBottomBtn"
                                                            Click="LogsBottomBtn_Click"
                                                            Foreground="White"
                                                            Style="{StaticResource BottomButtonStyle}" />
                                                        <Button
                                                            Name="LogSearchButton"
                                                            Click="LogsSearchBtn_Click"
                                                            Foreground="White"
                                                            Style="{StaticResource SearchButtonStyle}">
                                                            <Button.Flyout>
                                                                <Flyout ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                                    <StackPanel x:Name="BtnFlyoutPanel">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox
                                                                                x:Name="TextToFind"
                                                                                Width="355"
                                                                                BorderThickness="1"
                                                                                Text="" />
                                                                            <Button
                                                                                x:Name="LogFindButton"
                                                                                Click="FindButtonClicked"
                                                                                Foreground="#14345F"
                                                                                Style="{StaticResource NextButtonStyle}" />
                                                                        </StackPanel>
                                                                        <TextBlock
                                                                            x:Name="NotFoundTextBlock"
                                                                            HorizontalAlignment="Center"
                                                                            FontSize="14"
                                                                            Foreground="Red"
                                                                            Text="" />
                                                                    </StackPanel>
                                                                </Flyout>
                                                            </Button.Flyout>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            <Grid
                                                Grid.Row="1"
                                                Grid.RowSpan="3"
                                                Margin="40,15,30,30"
                                                VerticalAlignment="Top">

                                                <ProgressRing
                                                    x:Name="LogProgressRing"
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                                <ScrollViewer Name="LogsScrollViewer" Margin="0,30,0,0">
                                                    <StackPanel Name="LogsPanel">
                                                        <TextBlock
                                                            x:Name="log_text"
                                                            Margin="10,10,30,10"
                                                            HorizontalAlignment="Left"
                                                            IsTextSelectionEnabled="True"
                                                            Style="{StaticResource LogtextStyle}"
                                                            Text="" />
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Popup>

                                <!--  Inbox popup  -->
                                <Popup
                                    x:Name="InboxPopup"
                                    FlowDirection="RightToLeft"
                                    IsLightDismissEnabled="True">
                                    <SettingsFlyout
                                        x:Name="InboxFlyout"
                                        x:Uid="InboxTitle"
                                        Title=""
                                        Width="646"
                                        Padding="10,10,10,10"
                                        FlowDirection="LeftToRight"
                                        HeaderBackground="#14345F"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                        ScrollViewer.VerticalScrollMode="Disabled">
                                        <Grid x:Name="InboxGrid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid
                                                Grid.Row="0"
                                                Margin="0,0,0,80"
                                                VerticalAlignment="Top">

                                                <ListBox
                                                    x:Name="InboxList"
                                                    BorderBrush="Transparent"
                                                    ItemsSource="{Binding}"
                                                    Tapped="InboxList_Tapped">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Vertical">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Style="{StaticResource LisItemKeyText}" Text="Conversation Id" />
                                                                    <TextBlock Margin="5,0" />

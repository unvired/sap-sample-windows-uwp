<Page
    x:Class="UNVIRED_SAP_SAMPLE.Views.AddPerson"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UNVIRED_SAP_SAMPLE.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{StaticResource ForegroundColor}"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="Add Per">
        </TextBlock>


        <ScrollViewer
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Visible"
            VerticalScrollMode="Auto">
            <Grid
                Grid.Row="2"
                Background="Transparent"
                BorderBrush="Black"
                BorderThickness="1,0,1,1"
                CornerRadius="5">
                <Grid.ColumnDefinitions>
                    <!--<ColumnDefinition Width="32*" />-->
                    <!--<ColumnDefinition Width="241*" />-->
                    <ColumnDefinition Width="900*" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>

                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid x:Name="displayGrid" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="First Name" />
                        <TextBox
                            x:Name="FNametxt"
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.FIRST_NAME, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="Last Name " />
                        <TextBlock
                            x:Name="ValidationTextBlock"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="280,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiLight"
                            Foreground="Red"
                            Text="* Required"
                            Visibility="Collapsed" />

                        <TextBox
                            x:Name="LNametxt"
                            Grid.Row="2"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.LAST_NAME, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="Gender" />
                        <TextBox
                            x:Name="Gendertxt"
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.SEX, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="Profession" />
                        <TextBox
                            x:Name="Professiontxt"
                            Grid.Row="4"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.PROFESSION, Mode=TwoWay}" />



                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="Weight(Kg)" />

                        <TextBox
                            x:Name="Weighttxt"
                            Grid.Row="5"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.WEIGHT, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            Foreground="DimGray"
                            Text="Height(cm)" />

                        <TextBox
                            x:Name="Heighttxt"
                            Grid.Row="6"
                            Grid.Column="1"
                            Width="280"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding PersonHeaderInput.HEIGHT, Mode=TwoWay}" />


                        <!--<Button
                            Grid.Row="8"
                            Grid.Column="0"
                            Width="140"
                            HorizontalAlignment="Right"
                            Background="{StaticResource ForegroundColor}"
                            Click="AddPerson_Click"
                            Content="Add"
                            FontFamily="Segoe MDL2"
                            FontSize="14"
                            Foreground="{StaticResource WhiteForegroundColor}"
                            Style="{StaticResource CommonTextButtonStyle}" />-->
                        <!--<Button
                            x:Name="AddEmail"
                            Grid.Row="8"
                            Grid.Column="1"
                            Width="140"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Green"
                            Click="AddEmail_Click"
                            Content="Add Email"
                            FontFamily="Segoe MDL2"
                            FontSize="14"
                            Foreground="{StaticResource WhiteForegroundColor}"
                            Style="{StaticResource CommonTextButtonStyle}" />-->
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <!--<RowDefinition Height="50" />-->
                        </Grid.RowDefinitions>

                        <Grid
                            x:Name="displayEmail"
                            Grid.Row="0"
                            Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,39,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="25"
                                Foreground="DimGray"
                                Text="Email ID" />
                            <TextBox
                                x:Name="Emailtxt"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="280"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top" />
                            <!--<Button
                                Grid.Column="1"
                                Margin="300,0,0,0"
                                VerticalAlignment="Center"
                                Click="Button_Click_1"
                                Content="&#xE710;"
                                FontSize="16"
                                Style="{StaticResource ActionButtonStyle}"
                                ToolTipService.ToolTip="Click to Add" />-->


                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="140"
                                Margin="0,-4,68,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="{StaticResource ForegroundColor}"
                                Click="AddEmailBtn_Click"
                                Content="Add Email"
                                FontFamily="Segoe MDL2"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForegroundColor}"
                                Style="{StaticResource CommonTextButtonStyle}" />

                        </Grid>
                        <Grid Grid.Row="1" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,39,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="25"
                                Foreground="DimGray"
                                Text="(Can Insert more than One Email Id)" />
                            <!--<TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="280"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                 Text="{Binding EmailInput.E_ADDR, Mode=TwoWay}" />-->


                        </Grid>
                        <Grid Grid.Row="2" Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>

                            <Button
                                Width="140"
                                HorizontalAlignment="Right"
                                Background="{StaticResource ForegroundColor}"
                                Click="AddPerson_Click"
                                Content="Add"
                                FontFamily="Segoe MDL2"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForegroundColor}"
                                Style="{StaticResource CommonTextButtonStyle}" />
                            <Button
                                x:Name="AddEmail"
                                Grid.Column="1"
                                Width="140"
                                Margin="0,5,0,0"
                                VerticalAlignment="Top"
                                Background="Green"
                                Click="AddEmail_Click"
                                Content="Add Email"
                                FontFamily="Segoe MDL2"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForegroundColor}"
                                Style="{StaticResource CommonTextButtonStyle}" />
                        </Grid>
                    </Grid>
                </Grid>
                <Grid
                    x:Name="displayEmailIDList"
                    Grid.Column="1"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <!--<RowDefinition Height="80" />-->
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="20,5,20,0"
                        CornerRadius="5,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                            <!--<ColumnDefinition Width="*" />-->

                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="7"
                            Background="{StaticResource TextForegroundColor}"
                            BorderBrush="{StaticResource TextForegroundColor}"
                            BorderThickness="1,1,1,0" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TableHeadingText}"
                            Text="ID" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Style="{StaticResource TableHeadingText}"
                            Text="Email_ID" />
                    </Grid>

                    <Grid Grid.Row="1" CornerRadius="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ListView
                            x:Name="EmailList"
                            Grid.ColumnSpan="2"
                            Margin="25,0,28,42"
                            ItemsSource="{Binding EmailHeader, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <!--<ColumnDefinition Width="*" />-->
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Name="PIDtxt"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="Black"
                                            Text="{Binding SEQNO_E_MAIL}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="Black"
                                            Text="{Binding E_ADDR}" />

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
